<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="textstyle1">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textstyle2">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="zerostyle">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editstyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="line_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/linearlayout</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="getCodeBtn">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginTop">@dimen/line_margin_top</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/orange</item>
        <item name="android:text">@string/get_code</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>